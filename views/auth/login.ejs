<%- include('../includes/head-form.ejs') %>
<%- include('../includes/navigation.ejs') %>

<div class="container">
    <div class="front-page"> 
       <!-- Login Page -->
 
        <div class="login-page">
            <div class="login-page-content">
                <div class="login-page-logo logo">
                    <span class="p-1">S</span>
                    <span class="p-2">P</span>
                    <span>Smart</span><span>Path</span>
                </div>
                <form class="login-page-form" action="/login" method="POST">
                    <input type="text" class="form-login-input" name="email" placeholder="Email or mobile number">
                    <input type="password" class="form-login-input" name="password">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="form-login-btn">Login</button>      
                    <a href="#" class="form-login-link">Having trouble logging in?</a>
                    <span>or</span>

                    <input type="button" class="form-signup-btn signup" value="Sign Up">

                </form>
            </div>
        </div>

    </div>
    </div>
        <!-- End of Login Page -->

